{
  "compilerOptions": {
    "target": "ES2020", // ESM対応
    "module": "ESNext", // ESM出力
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src", // 省略可（開発構成による）
    "resolveJsonModule": true
  },
  "include": ["src"]
}
